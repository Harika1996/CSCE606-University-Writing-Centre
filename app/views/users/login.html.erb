<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6" style="margin-top: 50px;">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h3>Login </h3>
        </div>
        <div class="panel-body">
          <%= bootstrap_form_for(:user_auth, {:url => auth_path} ) do |f| %>
             <%= f.email_field :email, label: 'Email: ', required: true%>
             <%= f.password_field :password, label: 'Password: ', required:true%>
            <div class="row text-center">
              <div class="col-sm-6">
                <%= f.submit :Login , {:class=>'btn btn-info'}%>
              </div>
              <div class="col-sm-6">
                <%= link_to "Sign Up",new_user_path, {:class =>'btn btn-info'}%>
              </div>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>t
